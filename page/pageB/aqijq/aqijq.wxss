@import "../../template/template.wxss";
.bg {
  position: relative;
}


.show {
  display: block;
  background: rgba(0, 0, 0, 0.3);
}

.topcity {
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  line-height: 32rpx;
  padding-top: 20rpx;
}

.time {
  text-align: right;
  margin-right: 20rpx;
  color: #fff;
  line-height: 24rpx;
  font-size: 24rpx;
  padding-top: 40rpx;
}
.huan {
  height: 200rpx;
  width: 400rpx;
  margin: auto;
  margin-top: 40rpx;
  border: 4rpx solid #7b7b7b;
  border-radius: 50% 50% 0 0/100% 100% 0 0;
  border-bottom: none;
}
.aqizhi {
  text-align: center;
  font-size: 80rpx;
  color: #fff;
  padding-top: 60rpx;
}
.aqijibie {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.laiyuan {
  text-align: right;
  margin-right: 20rpx;
  color: #fff;
  line-height: 24rpx;
  font-size: 24rpx;
  margin-top: 40rpx;
}
.qitashuju {
  overflow: hidden;
  margin-top: 0%;
}
.qitale {
  float: left;
  width: 33.3%;
  margin-top: 40rpx;
}
.biaoti {
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #fff;
}
.zhi {
  line-height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}
.tiao {
  width: 80%;
  height: 10rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
  margin: auto;
  margin-top: 10rpx;
}
.tiaonei {
  height: 10rpx;
  border-radius: 10rpx;
}
.fifdayyubao {
  background: rgba(0, 0, 0, 0.3);
  height: 25%;
  width: 100%;
  padding-bottom: 20rpx
}
.title {
  line-height: 80rpx;
  padding: 0rpx 20rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.fifbox {
  overflow: hidden;
  width: 2000rpx;
}
.fifboxle {
  width: 250rpx;
  float: left;
}
.fifboxle .aqijianb {
  margin: auto;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 68%;
  line-height: 40rpx;
  border-radius: 20rpx;
}
.fifboxle view {
  font-size: 28rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
}
.fifboxle view image {
  width: 60rpx;
  height: 60rpx;
  margin: auto;
  margin-top: 15rpx;
  display: inline-block;
}
.jiance {
  overflow: hidden;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
  padding: 0rpx 20rpx;
  height: 70rpx !important;
}
.jiancele {
  line-height: 70rpx;
  float: left;
  color: #fff;
  font-size: 30rpx;
}
.jianceri {
  float: right;
  line-height: 70rpx;
}
.jianrizhi {
  float: left;
  line-height: 70rpx;
  color: #fff;
  font-size: 30rpx;
}
.jianrijibie {
  line-height: 40rpx;
  background: #d7af0c;
  border-radius: 5rpx;
  color: #fff;
  font-size: 24rpx;
  margin-left: 20rpx;
  float: left;
  margin-top: 17rpx;
  width: 110rpx;
  text-align: center;
}
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 70rpx;
}
.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 16.6%;
  color: #fff;
  line-height: 50rpx;
  border-radius: 5rpx;
}
.on {
  color: #fff;
  background: rgba(0, 0, 0, 0.3);
}
.swiper-box {
  display: block;
  height: 500rpx;
  overflow: hidden;
}
.swiper-box view {
  text-align: center;
}
.maps{
  position: fixed;
  width:100%;
  height:100% !important;
  z-index: 100000;
  left:0;
  top:0;
}
.quanpinganniu{
  position: absolute;
  right:30rpx;
  top:96rpx;
  z-index: 100000
}
.quanpinganniu image{
  width:50rpx;
  height:50rpx;
}
