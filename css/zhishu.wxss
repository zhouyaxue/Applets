.zhishutop{
  position: relative;
  height:60vh
}
.bjt{
  position: absolute;
  width:100%;
  height:100%;
  left:0;
  top:0;
  z-index: -1;
}
.zhishutopheimu{
  position: absolute;
  width:100%;
  height:100%;
  left:0;
  top:0;
  background: rgba(0, 0, 0, 0.5); 
  z-index: 0;
}
.zhishutopbox{
  width:64%;
  margin:auto;
  padding-top:50rpx;
}
.zhishutopbox image{
  width:100rpx;
  height:100rpx;
  display: block;
  margin:auto;
}
.jibie{
  width:200rpx;
  text-align: center;
  line-height: 80rpx;
  color:#ffffff;
  border-bottom:1rpx solid #ffffff;
  margin:auto;
  font-size:40rpx;
  margin-top:50rpx;
}
.xiangxitop{
  overflow: hidden;
  margin-top:20rpx;
}
.xiangxitople, .xiangxitopri{
  float: left;
  color:#ffffff;
  line-height: 50rpx;
  font-size:30rpx;
}
.xiangxitopri{
  float: right;
}
.zhushutopbo{
  width: 90%;
  background: rgba(36,140,202,0.9);
  position: absolute;
  bottom: 0;
  left: 0;
  height: 100rpx;
  border-radius: 0 50% 0 0;
  color:#ffffff;
  padding:20rpx 5%;
  font-size:30rpx;
  line-height: 50rpx;
}
.zhishubotitle{
  color:#333333;
  font-weight: bold;
  font-size:30rpx;
  margin-top:40rpx;
  text-align: center;
}
.zhishutext{
  color:#333333;
  font-size:30rpx;
  margin:40rpx 20rpx;
  line-height: 58rpx;
}
.boimg{
  overflow: hidden;
}
.boimg image{
  width:200rpx;
  height:70rpx;
  float: right;
}
.zhishubo{
  margin-top:-20rpx;
}